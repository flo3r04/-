#include <stdio.h> 
#include <math.h> 

int main()
{
	double a, b, a1, a2, b1, b2;

	printf("두 수를 입력 하세요 : ");
	scanf_s("%lf %lf", &a, &b);

	a2 = (int)floor(a);
	a1 = a - a2;
	b2 = (int)floor(b);
	b1 = fabs(b - b2);

	printf("%.2f의 정수 부분 : %.0f, 소수 부분 : %.2f\n", a, a2, a1);
	printf("%.2f의 정수 부분 : %.0f, 소수 부분 : %.2f\n", b, b2, b1);
	
	return 0;
}
